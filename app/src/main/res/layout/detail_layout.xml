<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:layout_gravity="center_horizontal"
    android:columnCount="3"
    android:rowCount="2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="9dp"
        android:backgroundTint="#2CEFEFEF"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="99dp"
        android:layout_width="99dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pressure"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="Pressure"                                    android:textStyle="bold"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/frgDetailPressure"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="9dp"
        android:backgroundTint="#2CEFEFEF"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="99dp"
        android:layout_width="99dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wind"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="Wind"
                android:textStyle="bold"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/frgDetailWindSpeed"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="9dp"
        android:backgroundTint="#2CEFEFEF"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="99dp"
        android:layout_width="99dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/temp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="Feels Like"
                android:textStyle="bold"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/frgDetailFeelsLike"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="9dp"
        android:backgroundTint="#2CEFEFEF"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="99dp"
        android:layout_width="99dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/visibility"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="Visibility"
                android:textStyle="bold"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/frgDetailVisibility"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="9dp"
        android:backgroundTint="#2CEFEFEF"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="99dp"
        android:layout_width="99dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/humidity"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="Humidity"
                android:textStyle="bold"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/frgDetailHumidity"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="9dp"
        android:backgroundTint="#2CEFEFEF"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="99dp"
        android:layout_width="99dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cloudiness"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="Cloudiness"
                android:textStyle="bold"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/frgDetaiCloudiness"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/kionaregular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</GridLayout>